{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "debug-build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Burraco.Web/Burraco.Web.csproj"
            ],
            "problemMatcher": "$msCompile",
            "dependsOn": [
                "debug-bundle"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "debug-bundle",
            "command": "npm",
            "args": [
                "run",
                "wbp",
                "--",
                "--mode",
                "development"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Burraco.Web"
            },
            "problemMatcher": "$node-sass"
        },
        {
            "label": "release-build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Burraco.Web/Burraco.Web.csproj",
                "-c",
                "Release"
            ],
            "problemMatcher": "$msCompile",
            "dependsOn": [
                "release-bundle"
            ]
        },
        {
            "label": "release-bundle",
            "command": "npm",
            "args": [
                "run",
                "wbp",
                "--",
                "--mode",
                "production"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Burraco.Web"
            },
            "problemMatcher": "$node-sass"
        }
    ]
}